circle-fill = #f4f4f4
circle-stroke = #dddbdb

body
  font-family "tablet-gothic", sans-serif
  text-rendering optimizeLegibility
  color #4A4A4A

section
  width 100%
  height 100%

section svg
  width 100%
  height 100%

circle
  fill circle-fill
  fill-opacity 1
  stroke circle-stroke
  stroke-width 1px

