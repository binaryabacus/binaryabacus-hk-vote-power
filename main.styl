div.description
  font-size 12px
  position absolute
  margin 0
  text-align center
  width 100%

p.description
  width 250px
  display inline-block
  line-height 1.2em

.label
  position absolute
  top 0
  left 0
  display table
  font-size 10px

.label p
  display table-cell
  text-align center
  vertical-align middle
  margin 0
  line-height 1.1em

.pack.label
  opacity 0
  pointer-events none
  transition opacity 0.5s ease

.node
  opacity 0

