circle-fill = #f4f4f4
circle-stroke = #dddbdb
circle-stroke-active = #1D77DF

body
  font-family "tablet-gothic", sans-serif
  text-rendering optimizeLegibility
  color #4A4A4A

svg
  width 100%
  height 100%

#control
  top 0
  left 0
  position absolute

circle
  fill circle-fill
  fill-opacity 1
  stroke circle-stroke
  stroke-width 1px

div.description
  font-size 12px
  position absolute
  margin 0
  text-align center
  width 100%

p.description
  width 250px
  display inline-block
  line-height 1.2em

.label-container
  pointer-events none
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.label
  color #868686
  position absolute
  top 0
  left 0
  display table
  font-size 10px

  &.power
    font-size 11px

.label p
  display table-cell
  text-align center
  vertical-align middle
  margin 0
  line-height 1.1em

.label-link
  stroke-width 1px
  stroke #dadada

.node
  transition opacity 0.5s ease

.pack.node
  circle
    transition fill 0.5s ease

  &.no-fill circle
    fill rgba(0,0,0,0)

svg.highlighted
  .node
    opacity 0.4

    &.active
      opacity 1
      stroke circle-stroke-active

      circle
        stroke circle-stroke-active

  line.active-link
    stroke circle-stroke-active

.label-link, .pack.no-fill
  pointer-events none
